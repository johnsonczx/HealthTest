<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_base_top" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.njgroup.health.breath_speed.SoundDiscView
            android:id="@+id/soundDiscView"
            android:layout_width="229dp"
            android:layout_height="245dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:background="@drawable/noise_disc" />

        <TextView
            android:id="@+id/recordTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/soundDiscView"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="点击按钮开始测量"
            android:textColor="@color/green"
            android:textSize="20sp" />


        <Button
            android:id="@+id/mBlowBtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/recordTV"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-30dp"
            android:background="@drawable/redbkg"
            android:elevation="1dip"
            android:text="开始"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>
</LinearLayout>
