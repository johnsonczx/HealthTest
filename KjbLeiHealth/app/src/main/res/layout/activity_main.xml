<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebgd"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:clickable="true"
        android:onClick="onHeartRateClick">

        <Button
            android:id="@+id/heartbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/heart_rate"
            android:onClick="onHeartRateClick" />

        <TextView
            android:id="@+id/hearttextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/heartbtn"
            android:text="心率测试"
            android:textColor="@color/red"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:onClick="onEarListenClick">

        <Button
            android:id="@+id/hearingbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/hearing"
            android:onClick="onEarListenClick" />


        <TextView
            android:id="@+id/heartextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/hearingbtn"
            android:text="听力测试"
            android:textColor="@color/blue"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:onClick="onBreathSpeedClick">

        <Button
            android:id="@+id/breathebtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/breathe"
            android:onClick="onBreathSpeedClick" />


        <TextView
            android:id="@+id/breathetextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/breathebtn"
            android:text="呼吸频率"
            android:textColor="@color/green"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>
